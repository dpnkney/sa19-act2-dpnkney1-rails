<style>
  body {
    background-color: #121212; /* dark grey background */
    color: white;
    font-family: Arial, sans-serif;
  }
  h1 {
    text-align: center;
    margin-top: 20px;
  }
  table {
    width: 80%;
    margin: 20px auto;
    border-collapse: collapse;
    background-color: #1e1e1e; /* slightly lighter dark grey for the table */
    color: white;
    border: 1px solid #444;
    border-radius: 8px;
    overflow: hidden;
  }
  th, td {
    padding: 12px;
    text-align: left;
    border-bottom: 1px solid #333;
  }
  th {
    font-weight: bold;
    background-color: #2c2c2c; /* darker grey header */
  }
  tr:hover {
    background-color: #333; /* row highlight on hover */
  }
  a {
    color: #4fc3f7; /* nice blue for links */
    text-decoration: none;
  }
  a:hover {
    text-decoration: underline;
  }
</style>

<h1>Board Game Library</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Category</th>
      <th>Players</th>
      <th>Publisher</th>
    </tr>
  </thead>
  <tbody>
    <% @board_games.each do |game| %>
      <tr>
        <td><%= link_to game.title, board_game_path(game) %></td>
        <td><%= game.category %></td>
        <td><%= "#{game.min_players}-#{game.max_players}" %></td>
        <td><%= game.publisher %></td>
      </tr>
    <% end %>
  </tbody>
</table>
